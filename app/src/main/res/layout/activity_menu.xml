<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stars"
    tools:context=".activities.MenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="375dp"
        android:layout_height="688dp"
        android:background="@drawable/home_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="325dp"
            android:layout_height="99dp"
            android:background="@drawable/menu_title"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062">

        </LinearLayout>

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="373dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout9"
            app:layout_constraintVertical_bias="0.993">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/easyButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:height="55dp"
                    android:backgroundTint="#1B2350"
                    android:text="EZ: t(ðŸŒ‘)=2*ðŸŒ‘*s"
                    android:textColor="#A3F7FA"
                    android:textSize="12sp"
                    app:cornerRadius="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:strokeColor="#03A9F4"
                    app:strokeWidth="0.6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/difficultButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="6dp"
                    android:height="55dp"
                    android:backgroundTint="#1B2350"
                    android:text="PRO: f(ðŸŒ‘)=2*ðŸŒ‘*Hz"
                    android:textColor="#A3F7FA"
                    android:textSize="12sp"
                    app:cornerRadius="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:strokeColor="#03A9F4"
                    app:strokeWidth="0.6dp" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="91dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sensorModeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:height="55dp"
                    android:backgroundTint="#1B2350"
                    android:text="Sensor Mode: On"
                    android:textColor="#A3F7FA"
                    android:textSize="12sp"
                    app:cornerRadius="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#03A9F4"
                    app:strokeWidth="0.6dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <Button
            android:id="@+id/by"
            android:layout_width="88dp"
            android:layout_height="59dp"
            android:layout_marginTop="132dp"
            android:background="#00FFFFFF"
            android:fontFamily="sans-serif-condensed-medium"
            android:letterSpacing="0"
            android:text="By:"
            android:textColor="#03A9F4"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toStartOf="@+id/Username"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Username"
            android:layout_width="233dp"
            android:layout_height="59dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="36dp"
            android:background="#00FFFFFF"
            android:fontFamily="sans-serif-condensed-medium"
            android:includeFontPadding="true"
            android:letterSpacing="0"
            android:text="Tom Cohen"
            android:textAlignment="viewStart"
            android:textColor="#03A9F4"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>